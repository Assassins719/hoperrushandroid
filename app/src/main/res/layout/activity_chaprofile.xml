<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hoperrush.app.Chaprofile"
    android:background="#DCDCDC">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_layout_header">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.hoperrush.core.widgets.CircularImageView
                android:id="@+id/circleimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
               android:layout_centerHorizontal="true"
                android:src="@drawable/username_icon"
                android:layout_marginTop="90dp"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/chatprofileview"
                android:id="@+id/name_relative"
                android:layout_below="@+id/circleimage"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:textColor="#000"

                    android:text="Name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="17sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/chatprofileview"
                android:layout_marginTop="10dp"
                android:id="@+id/emailrelative"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/name_relative">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:text="Email"
                    android:layout_toRightOf="@+id/email_icon"
                    android:layout_marginLeft="20dp"
                    android:textColor="#9b9b99"
                    android:textSize="14sp"
                    android:id="@+id/email_text"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"


                    android:background="#9b9b9b"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/email_text"/>
                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_email" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="ksvapplication91@gmail.com"
                    android:textSize="14dp"
                    android:id="@+id/email"
                    android:layout_toRightOf="@+id/email_icon"
                    android:textColor="#000"/>
                <View
                    android:id="@+id/add_address_view3"
                    android:layout_width="1px"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/icon_image1"
                    android:layout_centerHorizontal="true"
                    android:background="#9b9b9b"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="15dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/icon_image1"
                    android:src="@drawable/arrowdown"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Mobile"
                    android:layout_toRightOf="@+id/mobile_icon"
                    android:layout_marginLeft="20dp"
                    android:textColor="#9b9b99"
                    android:textSize="14sp"
                    android:layout_below="@+id/mobile"/>
                <ImageView
                    android:id="@+id/mobile_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_phone"
                    android:layout_below="@+id/view1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="9890876534"
                    android:textSize="14dp"
                    android:id="@+id/mobile"
                    android:layout_toRightOf="@+id/mobile_icon"
                    android:layout_below="@+id/view1"
                    android:textColor="#000"/>
                <View
                    android:id="@+id/add_address_view"
                    android:layout_width="1px"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/icon_image"
                    android:layout_centerHorizontal="true"
                    android:background="#9b9b9b"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="25dp"
                    android:layout_below="@+id/view1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/icon_image"
                    android:src="@drawable/phonecall"
                    android:layout_below="@+id/view1"/>

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
